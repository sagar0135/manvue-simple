# ManVue API Configuration Example
# Copy this file to .env and update the values for your environment

# API Configuration
APP_NAME=ManVue Enhanced API
APP_VERSION=2.0.0
DEBUG=true
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=5001
API_BASE_URL=http://localhost:5001

# Database Configuration
MONGO_URI=mongodb://localhost:27017
DB_NAME=manvue_db

# For MongoDB Atlas (cloud):
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/

# Security Configuration
SECRET_KEY=your-secret-key-change-in-production-with-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# CORS Configuration (for production, specify exact origins)
ALLOWED_ORIGINS=["*"]

# File Upload Configuration
MAX_FILE_SIZE=16777216
ALLOWED_IMAGE_TYPES=["image/jpeg", "image/png", "image/gif", "image/webp"]

# ML Configuration
ML_ENABLED=true
ML_API_URL=http://localhost:5000

# Environment Type (development, production, testing)
ENVIRONMENT=development
